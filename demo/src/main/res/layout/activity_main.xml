<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.github.farzadfarazmand.emptystate.EmptyState
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:emps_iconSize="SMALL"
            app:emps_icon="@mipmap/ic_launcher_round"
            app:emps_text="this is a text just for testing and nothing else"
            app:emps_textColor="@color/colorAccent"
            app:emps_textSize="18sp"
            app:emps_showButton="true"
            app:emps_buttonBackgroundColor="@color/colorPrimaryDark"
            app:emps_buttonTextColor="@android:color/black"
            android:onClick="testClick"
            app:emps_buttonText="testing"/>

</androidx.constraintlayout.widget.ConstraintLayout>